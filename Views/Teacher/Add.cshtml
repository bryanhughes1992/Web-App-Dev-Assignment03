@Model ASSIGNMENT03_BRYANHUGHES.Models.Teacher
@{
    ViewBag.Title = "AddTeacher";
}

<h2>Add Teacher</h2>

<form action="/Teacher/Create" method="POST">
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName"/>
    </div>
    <div>
        <label>Last Name:</label>
        <input type="text" id="lastName" name="lastName"/>
    </div>
    <div>
        <label for="employeeNumber">ID:</label>
        <input type="text" id="employeeNumber" name="employeeNumber"/>
    </div>
    <div>
        <label for="hireDate">Hire Date:</label>
        <input type="date" id="hireDate" name="hireDate"/>
    </div>
    <div>
        <label for="salary">Salary:</label>
        <input type="number" min="0" value="0" id="salary" name="salary" />
    </div>
    <div>
        <input type="submit" value="Add Teacher"/>
    </div>
</form>